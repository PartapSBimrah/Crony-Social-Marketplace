<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/suggested_people"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginStart="18dp"
                  android:layout_marginEnd="16dp"
                  android:textSize="20sp"
                  android:id="@+id/suggest_text"
                  android:layout_marginBottom="12dp"
                  android:layout_marginTop="16dp"
                 />
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:id="@+id/suggest_line"
              android:layout_marginBottom="16dp"
              android:background="@color/single_default_line"
              />

      <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:textColor="@color/text_color"
                android:id="@+id/no_suggestions"
                android:text="@string/no_suggestions"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_for_suggested_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    </LinearLayout>

</RelativeLayout>
